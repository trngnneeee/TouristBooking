header.header
  .inner-logo
    a(href=`/${pathAdmin}/dashboard`)
      span Tourist
      span Booking
  .inner-wrap
    .inner-notify
      img(
        alt="" 
        src="/admin/assets/images/icon-bell.svg"
        )
      span 6
    .inner-account
      .inner-avatar
        img(
          alt="" 
          src="/admin/assets/images/avatar.jpg"
          )
      .inner-text
        .inner-name #{account.fullName}
        .inner-role #{account.roleInfo}
    button.inner-button-menu
      i.fa-solid.fa-bars