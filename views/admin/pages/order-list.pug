                  .inner-item
                    .inner-image
                      img(
                        alt="Tour Hạ Long" 
                        src="/admin/assets/images/tour-1.jpg"
                        )
                    .inner-content
                      .inner-name Tour Hạ Long
                      .inner-quantity Người lớn: 3 x 1.500.000đ
                      .inner-quantity Trẻ em: 2 x 1.300.000đ
                      .inner-quantity Em bé: 2 x 1.000.000đ
                td
                  div Tổng tiền: 10.000.000đ
                  div Giảm: 400.000đ
                  div Mã giảm: TOURMUAHE2024
                  div Thanh toán: 9.600.000đ
                  div PTTT: Ví Momo
                  div TTTT: Đã thanh toán
                td
                  .badge.badge-orange Khởi tạo
                td.inner-center
                  div 16:20
                  div 01/01/2024
                td
                  .inner-buttons
                    - if (permissions.includes("order-edit"))
                      a(href=`/${pathAdmin}/order/edit`).inner-edit
                        i.fa-regular.fa-pen-to-square
                    - if (permissions.includes("order-delete"))
                      button.inner-delete
                        i.fa-regular.fa-trash-can
      .section-7
        span.inner-label Hiển thị 1 - 9 của 78
        select.inner-pagination
          option Trang 1
          option Trang 2
          option Trang 3