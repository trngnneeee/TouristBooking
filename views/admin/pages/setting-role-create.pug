extends ../layouts/default.pug

block main 
  main.main
    h1.box-title Tạo nhóm quyền
    .section-8
      form#setting-role-create-form
        .inner-group
          label.inner-label(for="name") Tên nhóm quyền
          input#name(
            name="name" 
            type="text"
            )
        .inner-group
          label.inner-label(for="description") Mô tả ngắn
          input#description(
            name="description" 
            type="text"
            )
        .inner-group
          label.inner-label Phân quyền
          .inner-checkbox-list
            .inner-checkbox-item
              input(
                value="Xem trang Tổng quan" 
                name="permissions" 
                type="checkbox"
                )
              label Xem trang Tổng quan
            .inner-checkbox-item
              input(
                value="Xem danh mục" 
                name="permissions" 
                type="checkbox"
                )
              label Xem danh mục
            .inner-checkbox-item
              input(
                value="Tạo danh mục" 
                name="permissions" 
                type="checkbox"
                )
              label Tạo danh mục
            .inner-checkbox-item
              input(
                value="Sửa danh mục" 
                name="permissions" 
                type="checkbox"
                )
              label Sửa danh mục
            .inner-checkbox-item
              input(
                value="Xóa danh mục" 
                name="permissions" 
                type="checkbox"
                )
              label Xóa danh mục
        .inner-button.inner-two-col
          button Tạo mới
      .inner-back
        a(href=`/${pathAdmin}/setting/role/list`) Quay lại danh sách