extends ../layouts/default.pug 

block main 
  main.main
    h1.box-title Tài khoản quản trị
    .section-4
      .inner-wrap
        .inner-item.inner-label
          i.fa-solid.fa-filter
          | Bộ lọc
        .inner-item
          select
            option(value="") Trạng thái
            option(value="") Hoạt động
            option(value="") Tạm dừng
        .inner-item.inner-date
          input(type="date")
          span -
          input(type="date")
        .inner-item
          select
            option(value="") Nhóm quyền
            option(value="") Quản trị viên
            option(value="") Quản lý tour
            option(value="") Quản lý đơn hàng
        .inner-item.inner-reset
          i.fa-solid.fa-rotate-left
          | Xóa bộ lọc
    .section-5
      .inner-wrap
        .inner-change-status
          .inner-item
            select
              option(value="") -- Hành động --
              option(value="") Hoạt động
              option(value="") Dừng hoạt động
              option(value="") Xóa
          .inner-item
            button Áp dụng
        .inner-search
          i.fa-solid.fa-magnifying-glass
          input(
            placeholder="Tìm kiếm" 
            type="text"
            )
        .inner-button-create
          a(href=`/${pathAdmin}/setting/account-admin/create`) + Tạo mới
    .section-6
      .table-2
        table
          thead
            tr
              th.inner-center
                input.inner-check(type="checkbox")
              th Họ tên
              th.inner-center Ảnh đại diện
              th Email
              th Số điện thoại
              th Nhóm quyền
              th Chức vụ
              th Trạng thái
              th Hành động
          tbody
            each item in adminAccountList
              tr
                td.inner-center
                  input.inner-check(type="checkbox")
                td #{item.name}
                td.inner-center
                  img.inner-avatar(src=item.avatar)
                td #{item.email}
                td #{item.phone}
                td #{item.roleInfo}
                td #{item.positionCompany}
                td
                  if (item.status == "active")
                    .badge.badge-green Hoạt động
                  if (item.status == "inactive")
                    .badge.badge-red Tạm dừng
                td
                  .inner-buttons
                    a.inner-edit(
                      href=`/${pathAdmin}/setting/account-admin/edit/${item.id}`
                    )
                      i.fa-regular.fa-pen-to-square
                    button.inner-delete
                      i.fa-regular.fa-trash-can
    .section-7
      span.inner-label Hiển thị 1 - 9 của 78
      select.inner-pagination
        option Trang 1
        option Trang 2
        option Trang 3