extend ../layouts/default.pug

block main 
  main.main
    h1.box-title Đơn hàng: OD000001
    .section-8
      form#order-edit-form
        .inner-group
          label.inner-label(for="fullName") Tên khách hàng
          input#fullName(
            value="Lê Văn A" 
            name="fullName" 
            type="text"
            )
        .inner-group
          label.inner-label(for="phone") Số điện thoại
          input#phone(
            value="0123456789" 
            name="phone" 
            type="text"
            )
        .inner-group.inner-two-col
          label.inner-label(for="note") Ghi chú
          textarea#note(name="note") Test...
        .inner-group
          label.inner-label(for="paymentMethod") Phương thức thanh toán
          select#paymentMethod(name="paymentMethod")
            option(value="") Ví Momo
            option(value="") VNPay
            option(value="") ZaloPay
        .inner-group
          label.inner-label(for="paymentStatus") Trạng thái thanh toán
          select#paymentStatus(name="paymentStatus")
            option(value="") Đã thanh toán
            option(value="") Chưa thanh toán
        .inner-group
          label.inner-label(for="createdAt") Ngày đặt
          input#createdAt(
            readonly="" 
            value="2024-11-18T10:30" 
            name="createdAt" 
            type="datetime-local"
            )
        .inner-group
          label.inner-label(for="status") Trạng thái
          select#status(name="status")
            option(value="") Khởi tạo
            option(value="") Hoàn thành
            option(value="") Hủy
        .inner-group
          label.inner-label Danh sách tour
          .inner-order-list
            .inner-order-item
              .inner-order-image
                img(
                  alt="Tour Hạ Long" 
                  src="/admin/assets/images/tour-1.jpg"
                  )
              .inner-order-content
                .inner-order-name Tour Hạ Long
                .inner-order-text Người lớn: 3 x 1.500.000đ
                .inner-order-text Trẻ em: 2 x 1.300.000đ
                .inner-order-text Em bé: 2 x 1.000.000đ
                .inner-order-text Ngày khởi hành: 20/10/2024
                .inner-order-text Khởi hành tại: Hà Nội
            .inner-order-item
              .inner-order-image
                img(
                  alt="Tour Hạ Long" 
                  src="/admin/assets/images/tour-1.jpg"
                  )
              .inner-order-content
                .inner-order-name Tour Hạ Long
                .inner-order-text Người lớn: 3 x 1.500.000đ
                .inner-order-text Trẻ em: 2 x 1.300.000đ
                .inner-order-text Em bé: 2 x 1.000.000đ
                .inner-order-text Ngày khởi hành: 20/10/2024
                .inner-order-text Khởi hành tại: Hà Nội
        .inner-group
          label.inner-label Thanh toán
          .inner-order-total
            div Tổng tiền: 10.000.000đ
            div Giảm: 400.000đ
            div Mã giảm: TOURMUAHE2024
            div
              | Thanh toán:
              span.inner-order-price 9.600.000đ
        .inner-button.inner-two-col
          button Cập nhật
      .inner-back
        a(href=`/${pathAdmin}/order/list`) Quay lại danh sách