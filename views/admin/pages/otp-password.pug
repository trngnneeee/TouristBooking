extends ../layouts/account.pug

block main 
  .page-account
    .form-account
      h2.inner-title Nhập mã OTP
      p.inner-desc Vui lòng nhập mã OTP để tiếp tục
      form#otp-password-form.inner-form
        .inner-group
          label.inner-label(for="otp") Mã OTP
          input#otp.inner-control(
            placeholder="Ví dụ: 123456" 
            name="otp" 
            type="text"
            )
        button.inner-button Gửi mã OTP
      .inner-more
        span Bạn đã nhớ mật khẩu?
        a(href=`/${pathAdmin}/account/login`) Đăng nhập