                    i.fa-regular.fa-trash-can
            tr
              td.inner-center
                input.inner-check(type="checkbox")
              td Danh mục 2
              td
                img.inner-avatar(src="/admin/assets/images/tour-1.jpg")
              td.inner-center 2
              td.inner-center
                .badge.badge-green Hoạt động
              td
                div Lê Văn A
                .inner-time 16:30 - 20/10/2024
              td
                div Lê Văn A
                .inner-time 16:30 - 20/10/2024
              td
                .inner-buttons
                  button.inner-edit
                    i.fa-regular.fa-pen-to-square
                  button.inner-delete
                    i.fa-regular.fa-trash-can
