extends ../layouts/account.pug 

block main 
  .page-account
    .form-account
      h2.inner-title Đổi mật khẩu
      p.inner-desc Vui lòng nhập mật khẩu để tiếp tục
      form#reset-password-form.inner-form
        .inner-group
          label.inner-label(for="password") Mật khẩu mới
          input#password.inner-control(
            name="password" 
            type="password"
            )
        .inner-group
          label.inner-label(for="confirm-password") Xác nhận mật khẩu
          input#confirm-password.inner-control(
            name="confirmPassword" 
            type="password"
            )
        button.inner-button Thay đổi
      .inner-more
        span Bạn đã nhớ mật khẩu?
        a(href=`/${pathAdmin}/account/login`) Đăng nhập