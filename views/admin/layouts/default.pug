doctype html
html
  head
    meta(charset="UTF-8")
    meta(
      content="width=device-width, initial-scale=1.0" 
      name="viewport"
      )
    title Tổng quan
    link(
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" 
      rel="stylesheet"
      )
    link(
      href="https://unpkg.com/filepond@^4/dist/filepond.css" 
      rel="stylesheet"
      )
    link(
      href="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.css" 
      rel="stylesheet"
      )
    link(
      href="/admin/assets/css/style.css" 
      rel="stylesheet"
      )
    script(
      referrerpolicy="origin" 
      src="https://cdn.tiny.cloud/1/vmvrvx4s91ngnwxk4xwccnt0e8p93eqwn9ld96cu2xb9nkpd/tinymce/7/tinymce.min.js"
      )
    script(src="/admin/assets/js/tinymce-config.js")

  body 
    header.header
      .inner-logo
        a(href="#")
          span 28
          span Admin
      .inner-wrap
        .inner-notify
          img(
            alt="" 
            src="/admin/assets/images/icon-bell.svg"
            )
          span 6
        .inner-account
          .inner-avatar
            img(
              alt="" 
              src="/admin/assets/images/avatar.jpg"
              )
          .inner-text
            .inner-name Le Van A
            .inner-role Admin
        button.inner-button-menu
          i.fa-solid.fa-bars
    nav.sider
      ul.inner-menu
        li
          a(href=`/${pathAdmin}/dashboard`)
            i.fa-solid.fa-gauge-high
            | Tổng quan
        li
          a(href=`/${pathAdmin}/category/list`)
            i.fa-solid.fa-table-cells-large
            | Quản lý danh mục
        li
          a(href=`/${pathAdmin}/tour/list`)
            i.fa-solid.fa-table-list
            | Quản lý tour
        li
          a(href=`/${pathAdmin}/order/list`)
            i.fa-solid.fa-list-check
            | Quản lý đơn hàng
        li
          a(href=`/${pathAdmin}/user/list`)
            i.fa-solid.fa-user
            | Quản lý người dùng
        li
          a(href=`/${pathAdmin}/contact/list`)
            i.fa-solid.fa-user-group
            | Thông tin liên hệ
      hr
      ul.inner-menu
        li
          a(href=`/${pathAdmin}/setting/list`)
            i.fa-solid.fa-gear
            | Cài đặt chung
        li
          a(href=`/${pathAdmin}/profile/edit`)
            i.fa-solid.fa-user-gear
            | Thông tin cá nhân
        li
          a.inner-logout(href="#")
            i.fa-solid.fa-power-off
            | Đăng xuất
    .sider-overlay

    block main 

    script(src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.6/Sortable.min.js")
    script(
      src="https://unpkg.com/filepond-plugin-image-preview/dist/filepond-plugin-image-preview.js"
      ).
      
    script(
      src="https://unpkg.com/filepond-plugin-file-validate-type/dist/filepond-plugin-file-validate-type.js"
      ).
      
    script(src="https://unpkg.com/filepond@^4/dist/filepond.js")
    script(src="https://cdn.jsdelivr.net/npm/chart.js").
      
    script(src="https://unpkg.com/just-validate@latest/dist/just-validate.production.min.js")
    script(src="/admin/assets/js/script.js")
  